@model Inmobiliaria.Models.Contrato

@{
	ViewData["Title"] = "Eliminar";
}

<div class="d-flex align-items-center justify-content-between">
	<h1>Eliminar un contrato</h1>

	<a asp-action="Index" class="btn btn-sm btn-light">
		<i class="fa-solid fa-chevron-left"></i> Volver a la lista
	</a>
</div>

<div>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Inmueble)
		</dt>
		<dd class="col-sm-10">
			@(Model.Inmueble!.Direccion)
		</dd>
		<dt class="col-sm-2">
			Due√±o del inmueble
		</dt>
		<dd class="col-sm-10">
			@(Model.Inmueble.Propietario)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Inquilino)
		</dt>
		<dd class="col-sm-10">
			@(Model.Inquilino!.ToString())
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.FechaInicio)
		</dt>
		<dd class="col-sm-10">
			@(Model.FechaInicio?.ToShortDateString())
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.FechaFin)
		</dt>
		<dd class="col-sm-10">
			@(Model.FechaFin?.ToShortDateString())
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.MontoMensual)
		</dt>
		<dd class="col-sm-10">
			$@Html.DisplayFor(model => model.MontoMensual)
		</dd>
	</dl>

	<form asp-action="Delete">
		<input type="submit" value="Eliminar" class="btn btn-danger" />
	</form>
</div>
